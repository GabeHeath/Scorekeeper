<div class="comment clearfix">
  <% if current_user.id == comment.user_id %>
      <div style="float:right;">
        <div class="btn-group">
          <button type="button" class=" btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <span class="glyphicon glyphicon-cog"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" role="menu">
            <li><%= link_to 'Edit', edit_play_comment_path(comment.play, comment) %></li>
            <li><%= link_to 'Delete', [comment.play, comment], method: :delete, data: {confirm: 'Are you sure?'} %></li>
          </ul>
        </div>
      </div>
  <% end %>

  <div class="comment_content">
    <p class="comment_name"><strong><%= comment.user.name %></strong></p>

    <p class="comment_body"><%= comment.comment %></p>

    <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> ago <%= comment.edited ? " | edited" : "" %></p>
  </div>


</div>









