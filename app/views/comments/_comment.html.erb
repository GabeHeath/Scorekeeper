<div class="comment clearfix">

      <div class="col-md-1 comment-btn-container">
        <div class="btn-group">
          <button type="button" class="comment-dropdown dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <span class="comment-cog glyphicon glyphicon-menu-hamburger"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" role="menu">
            <% if current_user.id == comment.user_id %>
                <li><%= link_to 'Edit', edit_play_comment_path(comment.play, comment) %></li>
            <% end %>
            <% if (current_user.id == comment.user_id) || (current_user.id == @play.created_by) %>
                <li><%= link_to 'Delete', [comment.play, comment], method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'} %></li>
            <% end %>
                <li><%= link_to 'Report', report_play_comment_path(comment.play, comment), data: {confirm: 'Are you sure you want to report this comment?'} %></li>
          </ul>
        </div>
      </div>

  <div class="col-md-11 comment_content">
    <%= link_to(user_path(comment.user.id)) do %>
        <strong class="comment_name"><%= comment.user.name %></strong>
    <% end %>

    <p class="comment_body"><%= comment.comment %></p>

    <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> ago <%= comment.edited ? " | edited" : "" %></p>
  </div>


</div>








