<div class="page-wrap">

  <header class="main-header">
    <label for="main-nav-check" class="toggle-menu">
      â˜°
    </label>

    <h1>Game Library</h1>
  </header>


  <div class="content">

    <h1>Listing Plays</h1>

    <table>
      <thead>
      <tr>
        <th>Play</th>
        <th>Game</th>
        <th>User</th>
        <th>Score</th>
        <th>Win</th>
        <th>Date</th>
        <th>Notes</th>
        <th>Created at</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @plays.each do |play| %>
          <tr>
            <td><%= play.play_id %></td>
            <td><%= play.game_id %></td>
            <td><%= play.user_id %></td>
            <td><%= play.score %></td>
            <td><%= play.win %></td>
            <td><%= play.date %></td>
            <td><%= play.notes %></td>
            <td><%= play.created_at %></td>
            <td><%= link_to 'Show', play %></td>
            <td><%= link_to 'Edit', edit_play_path(play) %></td>
            <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Play', new_play_path %>


  </div><!-- content -->
</div> <!-- page-wrapper -->

