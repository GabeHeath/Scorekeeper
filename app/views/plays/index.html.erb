<div class="page-wrap">

  <header class="main-header">
    <label for="main-nav-check" class="toggle-menu">
      â˜°
    </label>

    <h1>List of Plays</h1>
  </header>


  <div class="content">

    <div style="margin-bottom:15px;" class="col-md-8 col-md-offset-2">
      <%= form_tag plays_path, :method => "get" do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search..." %>
            <span class="input-group-btn">
        <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
      </span>
          </div>
      <% end %>
    </div>

    <div class="col-md-10 col-md-offset-1">

      <table id="play-table" class="table table-hover">
        <thead>
        <tr>
          <th>Date</th>
          <th>Game</th>
          <th>Location</th>
          <th>Players</th>
          <th>Comments</th>
        </tr>
        </thead>

        <tbody>
        <% @plays.each do |play| %>
            <tr data-link="<%= play_path(play.id) %>">
              <td><%= play.date.strftime("%-m/%d/%y") %></td>
              <td><%= play.game.name %></td>
              <td><%= play.location %></td>
              <td><%= play.players.count %></td>
              <td><%= play.comments.count %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>

    <div class="col-md-12" style="text-align: center">
      <%= will_paginate @posts, renderer: BootstrapPagination::Rails %><br>
      <span style="color:darkgray; font-size:12px;"><%= page_entries_info(@posts, :model => 'play') %></span>
    </div>


  </div>
  <!-- content -->
</div> <!-- page-wrapper -->

